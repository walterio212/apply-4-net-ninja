@using ninja.Models;
@using HtmlHelpers.BeginCollectionItem;

@model InvoiceDetailCrearModel

@using (Html.BeginCollectionItem("Details"))
{
    <tr>
        <td class="col-lg-4">
            <div class="col-lg-12">
                @Html.Label("Cantidad", new { @class = "col-lg-6" })
                @Html.TextBoxFor(x => x.Amount, new { @class = "col-lg-6" })
                @Html.ValidationMessageFor(x => x.Amount)
            </div>
        </td>        
        <td class="col-lg-4">
            <div class="col-lg-12">
                @Html.Label("Descripcion", new { @class = "col-lg-6" })
                @Html.TextBoxFor(x => x.Description, new { @class = "col-lg-6" })
            </div>
        </td>        
        <td class="col-lg-4">
            <div class="col-lg-12">
                @Html.Label("Precio Unitario", new  { @class="col-lg-6" })
                @Html.TextBoxFor(x => x.UnitPrice, new { @class = "col-lg-6" })
                @Html.ValidationMessageFor(x => x.UnitPrice)
            </div>
        </td>        
    </tr>
}
