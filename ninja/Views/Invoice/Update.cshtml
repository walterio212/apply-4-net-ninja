@using ninja.Models;

@model InvoiceCrearModel
@{
    ViewBag.Title = "Actualizar Factura";
}

<h2>Actualizar Factura</h2>
<container>
    @using (Html.BeginForm("Update", "Invoice", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <table id="detalles" class="table-bordered col-lg-12 col-md-12">
            <tbody id="detallesBody" class="col-lg-12">

                @foreach (var detail in Model.Details)
                {
                    
                    @Html.Partial("PartialUpdate", detail)
                    
                }
            </tbody>

        </table>
        <button type="button" id="agregarDetalle">Agregar Detalle</button>

        <button type="submit">Guardar</button>

    }
</container>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/invoice.update.js"></script>
<script>
    var urlAddDetail = "@Url.Action("AddDetail","Invoice")";
</script>